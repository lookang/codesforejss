// copy this custom function
function speech (K1fcorrect) {

try { // allow code to run in Student Learning Space 
var parent = parent.cordova;
if(parent) { // check it is running in Android or iOS
        parent.TTS.speak(K1fcorrect, function () {          
        }, function (reason) {          
        });
    }
    }
    catch(e) {
      var parent=false;
      
      // {
    var msg = new SpeechSynthesisUtterance(K1fcorrect);
//https://www.w3schools.com/tags/ref_language_codes.asp
// refer to this for all language codes
 //   msg.lang = 'en'; // for english language when enabled, a female voice is used. perfer to be default voice
 //   msg.lang = 'zh'; // for chinese language
  //  msg.lang = 'ms'; // for malay language // didnt work on 20181213
//  msg.lang = 'th'; // for thai language
//  msg.lang = 'id'; // for indonesia 
//https://flaviocopes.com/speech-synthesis-api/ 
//msg.lang = 'en-US'; // English (United States)
msg.lang = 'zh-CN'; // Chinese (China)


 // Set the attributes.
	msg.volume = parseFloat(1);
	msg.rate = parseFloat(1);
	msg.pitch = parseFloat(1);

msg.voice = speechSynthesis.getVoices().filter(function(voice) { return voice.name == 'Ting-Ting'; })[0];
window.speechSynthesis.speak(msg);
      //}   
      
      
      }
 

}
